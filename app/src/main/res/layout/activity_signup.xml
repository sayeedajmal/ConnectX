<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.PersonalChat"
    tools:context=".signup">


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/backButtonSignup"
        android:layout_width="50dp"
        android:layout_height="26dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="12dp"
        android:clickable="true"
        android:foreground="?android:selectableItemBackgroundBorderless"
        android:background="@drawable/round_corner"
        android:src="@drawable/backbutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="177dp"
        android:layout_height="136dp"
        android:src="@drawable/appicon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/equinox"
        android:text="CREATE NEW ACCOUNT"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circleImageView"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/signUsername"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:drawableStart="@drawable/defaultuser"
        android:drawablePadding="5dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/button_corner"
        android:fontFamily="@font/trebuc"
        android:gravity="center"
        android:inputType="text"
        android:padding="5dp"
        android:textColor="@color/White"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-200dp"
        android:layout_marginBottom="-8dp"
        android:background="@drawable/button_corner"
        android:fontFamily="@font/trebuc"
        android:padding="2sp"
        android:text="Username"
        android:textColor="@color/White"
        app:layout_constraintBottom_toTopOf="@+id/signUsername"
        app:layout_constraintEnd_toEndOf="@+id/signUsername"
        app:layout_constraintStart_toStartOf="@+id/signUsername"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/signEmail"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/email"
        android:background="@drawable/button_corner"
        android:fontFamily="@font/trebuc"
        android:gravity="center"
        android:inputType="textEmailAddress"
        android:padding="5dp"
        android:textColor="@color/White"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signUsername"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-180dp"
        android:layout_marginBottom="-8dp"
        android:background="@drawable/button_corner"
        android:fontFamily="@font/trebuc"
        android:padding="2sp"
        android:textColor="@color/White"
        android:text="Email Address"
        app:layout_constraintBottom_toTopOf="@+id/signEmail"
        app:layout_constraintEnd_toEndOf="@+id/signEmail"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/signEmail"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/signPassword"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_corner"
        android:textColor="@color/White"
        android:padding="10dp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/password"
        android:gravity="center"
        android:textSize="20sp"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signEmail"
        tools:ignore="MissingConstraints"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-160dp"
        android:layout_marginBottom="-8dp"
        android:background="@drawable/button_corner"        android:fontFamily="@font/trebuc"
        android:padding="2sp"
        android:text="Create Password"
        android:textColor="@color/White"
        app:layout_constraintBottom_toTopOf="@+id/signPassword"
        app:layout_constraintEnd_toEndOf="@+id/signPassword"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/signPassword"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ContinueToUploadImage"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="52dp"
        android:background="@color/LightSeaGreen"
        android:fontFamily="@font/nexaslabbold"
        android:text="Continue"
        android:textColor="@color/White"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signPassword"
        tools:ignore="MissingConstraints" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/ContinueToUploadImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ContinueToUploadImage"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/goLoginButton"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:background="@color/LightSeaGreen"
        android:fontFamily="@font/nexaslabbold"
        android:text="Log In"
        android:textColor="@color/White"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ContinueToUploadImage"
        app:layout_constraintVertical_bias="0.727"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>