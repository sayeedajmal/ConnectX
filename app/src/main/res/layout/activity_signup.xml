<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@color/White"
    tools:context=".signup">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="209dp"
        android:layout_height="85dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/machine"
        android:text="CREATE ACCOUNT"
        android:textColor="@color/DarkBlue"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/choose_ProfileImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        android:src="@mipmap/avtar"
        android:background="@drawable/image_corner"
        app:layout_constraintBottom_toTopOf="@+id/signUsername"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.129"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/signUsername"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="164dp"
        android:background="@drawable/button_corner"
        android:fontFamily="@font/trebuc"
        android:gravity="center"
        android:inputType="text"
        android:padding="0dp"
        android:textColor="@color/Black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-200dp"
        android:layout_marginBottom="-8dp"
        android:background="@color/White"
        android:fontFamily="@font/trebuc"
        android:padding="2sp"
        android:text="Username"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/signUsername"
        app:layout_constraintEnd_toEndOf="@+id/signUsername"
        app:layout_constraintStart_toStartOf="@+id/signUsername"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/signEmail"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/button_corner"
        android:fontFamily="@font/trebuc"
        android:gravity="center"
        android:inputType="textEmailAddress"
        android:padding="0dp"
        android:textColor="@color/Black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signUsername"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-180dp"
        android:layout_marginBottom="-8dp"
        android:background="@color/White"
        android:fontFamily="@font/trebuc"
        android:padding="2sp"
        android:text="Email Address"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/signEmail"
        app:layout_constraintEnd_toEndOf="@+id/signEmail"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/signEmail"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/signPassword"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/button_corner"
        android:fontFamily="@font/trebuc"
        android:gravity="center"
        android:inputType="textPassword"
        android:padding="0dp"
        android:textColor="@color/Black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signEmail"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-160dp"
        android:layout_marginBottom="-8dp"
        android:background="@color/White"
        android:fontFamily="@font/trebuc"
        android:padding="2sp"
        android:text="Create Password"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/signPassword"
        app:layout_constraintEnd_toEndOf="@+id/signPassword"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/signPassword"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Register"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="36dp"
        android:text="Sign up"
        android:fontFamily="@font/trebuc"
        android:textSize="25sp"
        android:textColor="@color/White"
        android:background="@drawable/button_corner"
        android:backgroundTint="@color/DodgerBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signPassword"
        tools:ignore="MissingConstraints" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/goLoginButton"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_corner"
        android:fontFamily="@font/trebuc"
        android:text="Log In"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Register"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>