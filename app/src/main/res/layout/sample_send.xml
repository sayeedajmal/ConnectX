<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="5dp"
    android:theme="@style/Theme.PersonalChat.V1">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_gchat_message_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#284575"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/layout_gchat_container_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/messageSen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/trebuc"
                android:maxWidth="260dp"
                android:paddingBottom="3dp"
                android:layout_gravity="end"
                android:padding="8dp"
                android:text="This is a Sender."
                android:textColor="#ffffff"
                android:textSize="17sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/messageSenTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textColor="@color/White"
                android:background="@drawable/round_corner"
                android:textSize="10sp"
                android:padding="3dp"
                android:layout_marginStart="5dp"
                android:text="01,28,2022 - 09-09 PM"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="RtlSymmetry,SmallSp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>