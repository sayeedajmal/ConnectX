<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.PersonalChat.V1"
    tools:context=".Activity.SettingActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/SettingUserImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/round"
        android:padding="3dp"
        android:src="@drawable/ic_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="PersonalChat"
        android:textColor="#2196F3"
        android:textSize="23sp"
        android:fontFamily="@font/nexaslabbold"
        app:layout_constraintEnd_toEndOf="@+id/SettingUserImage"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="@+id/SettingUserImage"
        app:layout_constraintTop_toBottomOf="@+id/SettingUserImage" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        android:background="@color/transparent"
        android:foreground="?android:selectableItemBackground"
        android:scaleType="fitCenter"
        android:src="@drawable/cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/trebuc"
        android:text="Settings"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backButton" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/trebuc"
        android:text="Account"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/EditProfileButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:background="@color/transparent"
        android:drawableEnd="@drawable/goahead"
        android:foreground="?android:selectableItemBackgroundBorderless"
        android:paddingStart="20dp"
        android:fontFamily="@font/nexaslabbold"
        android:text="Edit Profile"
        android:textAlignment="textStart"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        tools:ignore="RtlSymmetry"
        tools:layout_editor_absoluteX="0dp" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/HelpButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/transparent"
        android:drawableEnd="@drawable/goahead"
        android:foreground="?android:selectableItemBackgroundBorderless"
        android:paddingStart="20dp"
        android:text="Help"
        android:fontFamily="@font/nexaslabbold"
        android:textAlignment="textStart"
        app:layout_constraintTop_toBottomOf="@+id/EditProfileButton"
        tools:ignore="RtlSymmetry"
        tools:layout_editor_absoluteX="0dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/image_corner"
        android:drawableStart="@drawable/logout"
        android:fontFamily="@font/abcdisplay"
        android:foreground="?android:selectableItemBackground"
        android:padding="15dp"
        android:text="Logout"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HelpButton" />

    <TextView
        android:id="@+id/AppVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="288dp"
        android:background="@color/transparent"
        android:fontFamily="@font/trebuc"
        android:text="App Version.. "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toEndOf="@+id/logoutButton"
        app:layout_constraintTop_toBottomOf="@+id/HelpButton" />

</androidx.constraintlayout.widget.ConstraintLayout>