<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.PersonalChat"
    tools:context=".login">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="156dp"
        android:fontFamily="@font/abcdisplay"
        android:paddingLeft="5dp"
        android:text="WELCOME BACK"
        android:textColor="@color/DarkCyan"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="135dp"
        android:layout_height="156dp"
        android:src="@drawable/appicon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/getEmail"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/button_corner"
        android:fontFamily="@font/trebuc"
        android:gravity="center"
        android:drawableStart="@drawable/email"
        android:inputType="textEmailAddress"
        android:padding="5dp"
        android:drawablePadding="5dp"
        android:textColor="@color/White"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="-120dp"
        android:layout_marginBottom="-10dp"
        android:background="@drawable/button_corner"        android:padding="2sp"
        android:text="Email Address"
        android:textColor="@color/White"
        android:fontFamily="@font/trebuc"
        app:layout_constraintBottom_toTopOf="@+id/getEmail"
        app:layout_constraintEnd_toStartOf="@+id/getEmail"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/getPassword"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/password"
        android:gravity="center"
        android:background="@drawable/button_corner"
        android:fontFamily="@font/trebuc"
        android:textSize="20sp"
        android:textColor="@color/White"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getEmail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="-90dp"
        android:background="@drawable/button_corner"        android:padding="2sp"
        android:text="Password"
        android:textColor="@color/White"
        android:fontFamily="@font/trebuc"
        app:layout_constraintEnd_toStartOf="@+id/getPassword"
        app:layout_constraintTop_toBottomOf="@+id/getEmail"
        tools:ignore="MissingConstraints" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loginButton"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="56dp"
        android:text="Log in"
        android:fontFamily="@font/trebuc"
        android:textSize="25sp"
        android:textColor="@color/White"
        android:backgroundTint="@color/DodgerBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getPassword"
        tools:ignore="MissingConstraints" />


    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-50dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginButton"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/goSignupButton"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginBottom="80dp"
        android:fontFamily="@font/trebuc"
        android:text="SIGN UP"
        android:background="#154D60"
        android:textColor="@color/White"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>