<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:theme="@style/Theme.ConnectX.V1">


    <ImageView
        android:id="@+id/sendImage"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="5dp"
        android:src="@drawable/logo" />

    <ImageView
        android:id="@+id/ImageSeen"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="end|bottom"
        android:src="@drawable/seen"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/img_sen_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="15dp"
        android:background="@color/transparent"
        android:padding="3dp"
        android:text="01,28,2022 - 09-09 PM"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/card_gchat_message_me"
        tools:ignore="RtlHardcoded,SmallSp" />

</LinearLayout>